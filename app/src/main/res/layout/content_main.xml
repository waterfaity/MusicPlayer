<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!--底部图片  高斯处理-->
    <ImageView
        android:id="@+id/bg_img_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />
    <!--操作界面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/album_top"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/album_width"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_card_view"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zero" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/album_top"
            android:background="@drawable/bg_play_lin_style"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/line1"
                android:gravity="center_vertical">
                <!--上/下曲 播放/暂停-->
                <include

                    layout="@layout/content_play_control_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_play_lin" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <!--曲名/计数/歌手-->
                <include layout="@layout/content_play_info" />
                <!--歌曲进度条-->
                <include layout="@layout/content_play_progress" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
    <!--最上层-->


</RelativeLayout>